<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>

<div class="container">
  <h1>Address Book</h1>
  @if (@Model.Count == 0)
  {
    <h2>Sorry no matching contacts</h2>
  }
  else
  {
    @foreach (var contact in Model)
    {
      <h3><a href='/contacts/@contact.GetId()'>@contact.GetLastName() @contact.GetFirstName()</a></h3>
    }
  }
  <form action="/contacts/search" method="post">
    <div class="form-group">
      <label for="search">Search Address Book</label>
      <input id="search" name="search" class="form-control" type="text">
    </div>
    <button type="submit">Search</button>
  </form>
  <p><a href="/">Back home</a>
</div>
