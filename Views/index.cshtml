<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>

<h1>Address Book</h1>
@if (@Model.Count == 0)
{
  <h2>Welcome to the Web-a-dex Address Book</h2>
  <h3>Add a contact to get started</h3>
}

@foreach (var contact in Model)
{
  <h3><a href='/contacts/@contact.GetId()'>@contact.GetLastName() @contact.GetFirstName()</a></h3>
}

<h3><a href="/contacts/new">Add a new contact</a></h3>
<form action="/contacts/clear" method="post">
  <button class="button btn-danger" type="submit">Clear All Contacts</button>
</form>
